{
  "name": "@tosui/react",
  "version": "0.1.3",
  "description": "A themable, orderly, simple UI component library for React",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Dan Cortes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dgca/tosui.git",
    "directory": "packages/react"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css",
    "./fonts.css": "./dist/fonts.css"
  },
  "files": [
